<script>
// KONFIGURASI SEDERHANA
var jumlahPost = 8; // Mau ambil berapa postingan terbaru?

function loadRunningPosts(json) {
  var posts = json.feed.entry;
  var track = document.getElementById('track-postingan');
  var htmlCode = '';

  if (posts) {
    // 1. Ambil data postingan
    for (var i = 0; i < posts.length; i++) {
      var title = posts[i].title.$t;
      var link = '';
      
      // Cari link postingan
      for (var j = 0; j < posts[i].link.length; j++) {
        if (posts[i].link[j].rel == 'alternate') {
          link = posts[i].link[j].href;
          break;
        }
      }

      // Cari Gambar (Otomatis ambil resolusi agak bagus)
      var img = 'https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEiWj.../s1600/no-image.png'; // Gambar cadangan kalau kosong
      if (posts[i].media$thumbnail) {
        // Mengubah s72-c (kecil) menjadi w300 (sedang) agar tidak buram
        img = posts[i].media$thumbnail.url.replace('/s72-c/', '/w300-h400-c/'); 
      } else if (posts[i].content && posts[i].content.$t.match(/src="([^"]+)"/)) {
        img = posts[i].content.$t.match(/src="([^"]+)"/)[1];
      }

      // Buat Kartu HTML
      htmlCode += '<a href="' + link + '" class="slider-item" title="' + title + '">';
      htmlCode += '<img src="' + img + '" alt="' + title + '">';
      htmlCode += '<div class="slider-title">' + title + '</div>';
      htmlCode += '</a>';
    }

    // 2. Render ke layar (Diduplikasi agar nyambung terus/infinite loop)
    track.innerHTML = htmlCode + htmlCode; 
  }
}
</script>


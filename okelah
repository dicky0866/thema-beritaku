<script>
(function(){
  var isHome = location.pathname === '/' || location.pathname === '';
  if(!isHome){return;}

  var target = document.getElementById('beranda-dinamis-label');
  if(!target){return;}
  target.style.display = 'block';

 
target.innerHTML = '<section class="bdl-hero"><h2 class="bdl-section-title">Postingan Terbaru</h2><div class="bdl-skeleton"></div><div class="bdl-meta">Memuat beranda dinamis...</div></section>';


  function esc(txt){return (txt||'').replace(/[&<>"']/g,function(m){return {'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[m];});}
  function thumb(entry){


 if(entry.media$thumbnail){return entry.media$thumbnail.url.replace('/s72-c/','/w480-h320-c/');}
    
    var html = (entry.content && entry.content.$t) || (entry.summary && entry.summary.$t) || '';
    var m = html.match(/<img[^>]+src=["']([^"']+)/i);


    return m?m[1]:'https://via.placeholder.com/480x320?text=Artikel';
  }
  function link(entry){
    for(var i=0;i<(entry.link||[]).length;i++){ if(entry.link[i].rel==='alternate') return entry.link[i].href; }
    return '#';
  }
  function date(entry){return (entry.published && entry.published.$t||'').substring(0,10);}
  function hasLabel(entry,label){
    var cats = entry.category || [];
    for(var i=0;i<cats.length;i++){ if(cats[i].term===label){ return true; } }
    return false;
  }

  function fetchJson(url){return fetch(url).then(function(r){return r.json();});}

  function makeSlider(trackWrap){
    var track = trackWrap.querySelector('.bdl-track');
    if(!track){return;}

   var cards = Array.prototype.slice.call(track.children);
    if(cards.length < 2){return;}

    cards.forEach(function(node){
      track.appendChild(node.cloneNode(true));
    });

    var x = 0;
    var drag = false;
    var hover = false;
    var start = 0;
    var last = 0;
    var raf;
    var loopWidth = 0;

    function recalcLoopWidth(){
      loopWidth = 0;
      cards.forEach(function(node){
        loopWidth += node.offsetWidth;
      });
      var gap = parseFloat(getComputedStyle(track).gap || 0) || 0;
      loopWidth += gap * Math.max(0, cards.length - 1);
    }

    function normalize(){
      if(!loopWidth){return;}
      while(x <= -loopWidth){x += loopWidth;}
      while(x > 0){x -= loopWidth;}
    }


    function step(){
       if(!drag && !hover){
        x -= 0.33;
        normalize();

        track.style.transform='translateX('+x+'px)';
      }
       raf = requestAnimationFrame(step);
    }

    function stopDrag(){
      drag = false;
      normalize();
      track.style.transform='translateX('+x+'px)';
    }
      recalcLoopWidth();
    window.addEventListener('resize', recalcLoopWidth);

    trackWrap.addEventListener('mouseenter', function(){hover = true;});
    trackWrap.addEventListener('mouseleave', function(){hover = false;});

    trackWrap.addEventListener('pointerdown', function(e){
      drag = true;
      start = e.clientX;
      last = x;
      trackWrap.setPointerCapture(e.pointerId);
    });

    trackWrap.addEventListener('pointermove', function(e){
      if(!drag){return;}
      x = last + (e.clientX - start);
      normalize();
      track.style.transform='translateX('+x+'px)';
    });

    trackWrap.addEventListener('pointerup', stopDrag);
    trackWrap.addEventListener('pointercancel', stopDrag);

    step();
  }

function applyReveal(){
    if(!('IntersectionObserver' in window)){return;}
    var io=new IntersectionObserver(function(entries){
      entries.forEach(function(item){
        if(item.isIntersecting){item.target.classList.add('is-visible'); io.unobserve(item.target);} 
      });
    },{threshold:0.14});
    target.querySelectorAll('.bdl-label-block').forEach(function(el){io.observe(el);});
  }

function buildLabelOrder(entries){
    var priority=['Pertanian','Opini reflektif','Literasi Hukum','Novel','Keagamaan'];
    var seen={},ordered=[];
    priority.forEach(function(lb){
      for(var i=0;i<entries.length;i++){
        if(hasLabel(entries[i],lb)){seen[lb]=1;ordered.push(lb);break;}
      }
    });
    entries.forEach(function(e){
      (e.category||[]).forEach(function(c){
        var t=c.term;
        if(t && !seen[t]){seen[t]=1;ordered.push(t);} 
      });
    });
    return ordered.slice(0,7);
  }



  function render(entries){
    if(!entries.length){
      target.innerHTML='<p>Tidak ada artikel terbaru.</p>';
      return;
    }


    var hero=entries[0];
      var heroLabel=((hero.category&&hero.category[0]&&hero.category[0].term)||'Artikel');
    var html='<div class="bdl-shell"><section class="bdl-hero"><h2 class="bdl-section-title">Postingan Terbaru</h2><a href="'+link(hero)+'"><img src="'+thumb(hero)+'" alt="'+esc(hero.title.$t)+'"><h2>'+esc(hero.title.$t)+'</h2><div class="bdl-meta"><span>'+date(hero)+'</span><span class="bdl-badge">'+esc(heroLabel)+'</span></div></a></section><div class="bdl-grid">';

    var labels=buildLabelOrder(entries);




    labels.forEach(function(lb){
      var list=[];
      for(var i=0;i<entries.length && list.length<8;i++){
        if(hasLabel(entries[i],lb)){ list.push(entries[i]); }
      }
      if(!list.length){return;}

       var top=list[0], more=Math.max(0,list.length-1);
      var items=list.map(function(p){return '<a class="bdl-item" href="'+link(p)+'"><img src="'+thumb(p)+'" alt="'+esc(p.title.$t)+'"><span>'+esc(p.title.$t)+'</span></a>';}).join('');
      var slider = list.length > 1 ? '<div class="bdl-track-wrap"><div class="bdl-track">'+items+'</div></div>' : '';


      html += '<section class="bdl-label-block"><div class="bdl-label-head"><a href="/search/label/'+encodeURIComponent(lb)+'">'+esc(lb)+'</a><a class="bdl-see-all" href="/search/label/'+encodeURIComponent(lb)+'">Lihat semua</a></div><a class="bdl-latest" href="'+link(top)+'"><img src="'+thumb(top)+'" alt="'+esc(top.title.$t)+'"><h3>'+esc(top.title.$t)+'</h3></a><div class="bdl-meta">'+(more?('+'+more+' artikel lainnya'):'Update terbaru')+'</div>'+slider+'</section>';

    });

 html += '</div></div>';
    target.innerHTML = html;

    target.querySelectorAll('.bdl-track-wrap').forEach(makeSlider);
applyReveal();

    var blogPosts = document.querySelector('.blog-posts');
    if(blogPosts){ blogPosts.style.display = 'none'; }
  }

  var cacheKey = 'bdl-home-cache-v3';
  try {
    var cachedHtml = localStorage.getItem(cacheKey);
    if(cachedHtml){
      target.innerHTML = cachedHtml;



    target.querySelectorAll('.bdl-track-wrap').forEach(makeSlider);
      applyReveal();
      var cachedBlogPosts = document.querySelector('.blog-posts');

      if(cachedBlogPosts){ cachedBlogPosts.style.display = 'none'; }
    }
  } catch(e) {}

  fetchJson('/feeds/posts/summary?alt=json&max-results=60').then(function(data){
    var entries=(data.feed&&data.feed.entry)||[];
    render(entries);
    try { localStorage.setItem(cacheKey, target.innerHTML); } catch(e) {}
  }).catch(function(){
    if(!target.innerHTML || target.innerHTML.indexOf('bdl-label-block') === -1){
      target.innerHTML='<p>Gagal memuat beranda dinamis.</p>';
    }
  });
})();
</script>]]></b:widget-setting>

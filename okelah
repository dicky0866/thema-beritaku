<script>
(function () {
  
  function parseNovelConfig(raw) {
    var lines = (raw || '').split('\n');
    var items = [];

    for (var i = 0; i < lines.length; i++) {
      var line = lines[i].trim();
      if (!line || line.charAt(0) === '#') continue;

      var cols = line.split('|');
      if (cols.length < 5) continue;

      var title = (cols[0] || '').trim();
      var link = (cols[1] || '').trim();
      var image = (cols[2] || '').trim();
      var dateText = (cols[3] || '').trim();
      var readsText = (cols[4] || '').trim();

      if (!title || !link || !image) continue;

      var publishedAt = Date.parse(dateText);
      if (isNaN(publishedAt)) publishedAt = 0;

      var reads = parseInt(readsText.replace(/[^0-9]/g, ''), 10);
      if (isNaN(reads)) reads = 0;

      items.push({
        title: title,
        link: link,
        image: image,
        dateText: dateText,
        publishedAt: publishedAt,
        reads: reads
      });
    }

     return items;
  }


  function renderNovelWidget(widget) {
    var source = widget.querySelector('.novel-config-source');
    var rak = widget.querySelector('.rak-novel');
  if (!source || !rak) return;

      var items = parseNovelConfig(source.value || source.textContent);
    if (!items.length) {
      rak.innerHTML = '';
      return;
    }

var newestIndex = 0;
    for (var n = 1; n < items.length; n++) {
      if (items[n].publishedAt > items[newestIndex].publishedAt) newestIndex = n;
    }

    var popularIndex = -1;
    for (var p = 0; p < items.length; p++) {
      if (p === newestIndex) continue;
      if (popularIndex === -1 || items[p].reads > items[popularIndex].reads) popularIndex = p;
    }

    var ordered = [];
    ordered.push(items[newestIndex]);
    if (popularIndex !== -1) ordered.push(items[popularIndex]);

    for (var r = 0; r < items.length; r++) {
      if (r !== newestIndex && r !== popularIndex) ordered.push(items[r]);
    }

    var html = '';
    for (var j = 0; j < ordered.length; j++) {
      var item = ordered[j];
      var badges = '';

   
    if (j === 0) {
        badges += '<div class="label-status terbaru">TERBARU</div>';
      } else if (j === 1) {
        badges += '<div class="label-status populer">POPULER</div>';
      }

      html += '' +
        '<a href="' + item.link + '" class="buku-item">' +
          badges +
          '<img src="' + item.image + '" alt="' + item.title + '" />' +
          '<div class="buku-detail">' +
            '<h4>' + item.title + '</h4>' +
            '<div class="meta-novel">Dibaca: ' + item.reads + '</div>' +
          '</div>' +
        '</a>';

    }

     rak.innerHTML = html;
  }

 var widgets = document.querySelectorAll('[data-widget="novel-rak"]');
  for (var i = 0; i < widgets.length; i++) {
    renderNovelWidget(widgets[i]);
  }

})();
</script>]]></b:widget-setting>

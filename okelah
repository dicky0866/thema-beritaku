<script>
// 1. FUNGSI RENDER POSTINGAN (Mengambil data)
function renderRunningPosts(json) {
  var entries = json.feed.entry;
  var container = document.getElementById('track-otomatis');
  var html = '';

  if (entries) {
    for (var i = 0; i < entries.length; i++) {
      var judul = entries[i].title.$t;
      var linkPost = '';
      
      for (var k = 0; k < entries[i].link.length; k++) {
        if (entries[i].link[k].rel == 'alternate') { linkPost = entries[i].link[k].href; break; }
      }

      var thumbnail = '';
      if (entries[i].media$thumbnail) {
        thumbnail = entries[i].media$thumbnail.url.replace('/s72-c/', '/w200-h300-c/');
      } else if (entries[i].content && entries[i].content.$t.indexOf("<img") > -1) {
        var src = entries[i].content.$t.match(/src="(.*?)"/)[1];
        thumbnail = src;
      } else {
        thumbnail = 'https://via.placeholder.com/100x140?text=No+Cover';
      }

      html += '<a href="' + linkPost + '" class="slider-item" title="' + judul + '">';
      html += '<img src="' + thumbnail + '">';
      html += '<div class="slider-title">' + judul + '</div>';
      html += '</a>';
    }
    // Duplikasi konten 2x untuk efek infinite loop yang mulus
    container.innerHTML = html + html + html; 
    
    // Setelah konten siap, jalankan fungsi slider interaktif
    startInteractiveSlider();
  } else {
    container.innerHTML = 'Tidak ada postingan.';
  }
}

// 2. FUNGSI SLIDER INTERAKTIF (Auto Jalan + Bisa Digeser)
function startInteractiveSlider() {
  const slider = document.getElementById('slider-area');
  const track = document.getElementById('track-otomatis');
  
  let currentTranslate = 0;
  let prevTranslate = 0;
  let isDragging = false;
  let isHovering = false;
  let startPos = 0;
  let animationID;
  
  // -- KONFIGURASI --
  const speed = 0.5; // Kecepatan auto jalan (semakin besar semakin ngebut)
  
  // Event Listeners (Touch & Mouse)
  slider.addEventListener('touchstart', touchStart);
  slider.addEventListener('touchend', touchEnd);
  slider.addEventListener('touchmove', touchMove);
  
  slider.addEventListener('mousedown', touchStart);
  slider.addEventListener('mouseup', touchEnd);
  slider.addEventListener('mouseleave', () => { if(isDragging) touchEnd() });
  slider.addEventListener('mousemove', touchMove);

// Pause saat mouse diarahkan, lanjut lagi saat mouse keluar
  slider.addEventListener('mouseenter', pauseOnHover);
  slider.addEventListener('mouseleave', resumeFromHover);


  // Mencegah menu klik kanan saat drag
  window.oncontextmenu = function(event) {
    event.preventDefault();
    event.stopPropagation();
    return false;
  };

  function touchStart(index) {
    isDragging = true;
    isHovering = true;
    startPos = getPositionX(index);
    cancelAnimationFrame(animationID); // Stop auto jalan saat disentuh
    slider.style.cursor = 'grabbing';
  }

  function touchMove(index) {
    if (isDragging) {
      const currentPosition = getPositionX(index);
      const diff = currentPosition - startPos;
      currentTranslate = prevTranslate + diff;
      setSliderPosition();
    }
  }

  function touchEnd() {
    isDragging = false;
    isHovering = false;
    prevTranslate = currentTranslate;
    slider.style.cursor = 'grab';
    requestAnimationFrame(autoPlay); // Lanjut jalan otomatis setelah dilepas
  }
 function pauseOnHover() {
    isHovering = true;
    cancelAnimationFrame(animationID);
  }

  function resumeFromHover() {
    if (!isDragging) {
      isHovering = false;
      requestAnimationFrame(autoPlay);
    }
  }


  function getPositionX(event) {
    return event.type.includes('mouse') ? event.pageX : event.touches[0].clientX;
  }

  function setSliderPosition() {
    track.style.transform = `translateX(${currentTranslate}px)`;
  }

  // Logika Auto Jalan (Infinite Loop)
  function autoPlay() {
    if (!isDragging && !isHovering) {
      currentTranslate -= speed; // Bergerak ke kiri
      
      // Hitung total lebar satu set item (karena kita duplikat 3x di atas)
      const trackWidth = track.scrollWidth;
      const oneSetWidth = trackWidth / 3;
      const minLoopLimit = -2 * oneSetWidth;

         // Efek berputar tanpa jeda: jaga posisi tetap di area set tengah
      if (currentTranslate <= minLoopLimit) {
        currentTranslate += oneSetWidth;
      }
         // Jika ditarik terlalu ke kanan, pindahkan ke set tengah biar tetap mulus
      else if (currentTranslate > -oneSetWidth) {
         currentTranslate -= oneSetWidth;

      }

      prevTranslate = currentTranslate;
      setSliderPosition();
      animationID = requestAnimationFrame(autoPlay);
    }
  }

  // Mulai animasi
currentTranslate = -(track.scrollWidth / 3);
  prevTranslate = currentTranslate;
  setSliderPosition();

  autoPlay();
}
</script>

<script src="/feeds/posts/default?alt=json&callback=renderRunningPosts&max-results=10"></script>]]></b:widget-setting>

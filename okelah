<script>
(function () {
  var table = document.getElementById('novel-data-table');
  var rak = document.getElementById('rak-novel');
  if (!table || !rak) return;

  var rows = table.querySelectorAll('tbody tr');
  var html = '';

  for (var i = 0; i < rows.length; i++) {
    var cols = rows[i].querySelectorAll('td');
    if (cols.length < 4) continue;

    var status = (cols[0].textContent || '').trim().toUpperCase();
    var title = (cols[1].textContent || '').trim();
    var image = (cols[2].textContent || '').trim();
    var link = (cols[3].textContent || '').trim();

    if (!title || !image || !link) continue;

    var badge = '';
    if (status === 'HOT' || status === 'NEW') {
      badge = '<div class="label-status ' + status.toLowerCase() + '">' + status + '</div>';
    }

    html += '' +
      '<a href="' + link + '" class="buku-item">' +
        badge +
        '<img src="' + image + '" alt="' + title + '" />' +
        '<div class="buku-detail"><h4>' + title + '</h4></div>' +
      '</a>';
  }

  rak.innerHTML = html;
})();

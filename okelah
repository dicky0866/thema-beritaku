    <script>

      (function(){
  var CHATBASE_BOT_ID = &quot;I1PWIuLgPOUv93nPwRDD-&quot;;
  var CHATBASE_SRC = &quot;https://www.chatbase.co/embed.min.js&quot;;

  function initQueue() {
    if (!window.chatbase || window.chatbase(&quot;getState&quot;) !== &quot;initialized&quot;) {
      window.chatbase = function() {
        if (!window.chatbase.q) window.chatbase.q = [];
        window.chatbase.q.push(arguments);
      };
      window.chatbase = new Proxy(window.chatbase, {
        get: function(target, prop) {
          if (prop === &quot;q&quot;) return target.q;
          return function() {
            return target(prop, ...arguments);
          };
        }
      });
    }
  }

  function loadChatbase() {
    if (document.getElementById(CHATBASE_BOT_ID)) return;
    var script = document.createElement(&quot;script&quot;);
    script.src = CHATBASE_SRC;
    script.id = CHATBASE_BOT_ID;
    script.domain = &quot;www.chatbase.co&quot;;
    script.defer = true;
    (document.body || document.head).appendChild(script);
  }

  initQueue();

  if (document.readyState === &quot;complete&quot; || document.readyState === &quot;interactive&quot;) {
    loadChatbase();
  } else {
    document.addEventListener(&quot;DOMContentLoaded&quot;, loadChatbase, { once: true });
    window.addEventListener(&quot;load&quot;, loadChatbase, { once: true });
  }
})();

      
</script>

 
    <div id='back-to-top' onclick='window.scrollTo({top: 0, behavior: &quot;smooth&quot;});'>&#8593;</div>

<script type='text/javascript'>
// Munculkan tombol jika layar digulir ke bawah sejauh 400px
window.onscroll = function() {
  var btt = document.getElementById(&quot;back-to-top&quot;);
  if (document.body.scrollTop &gt; 400 || document.documentElement.scrollTop &gt; 400) {
    btt.style.display = &quot;block&quot;;
  } else {
    btt.style.display = &quot;none&quot;;
  }
};

    </script>


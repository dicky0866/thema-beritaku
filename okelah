  .bdl-label-block.is-visible{opacity:1;transform:translateY(0)}
 .bdl-label-head{display:flex;justify-content:space-between;align-items:center;margin-bottom:10px;gap:8px;flex-wrap:wrap}
  .bdl-label-head a{font-size:17px;font-weight:700;text-decoration:none;color:#2a5266}
  .bdl-see-all{font-size:12px;text-decoration:none;color:#3f7e9f;font-weight:700}


  .bdl-latest{display:flex;gap:10px;text-decoration:none;color:inherit;margin-bottom:10px}

 .bdl-latest img{width:94px;height:74px;border-radius:8px;object-fit:cover;flex-shrink:0}

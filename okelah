<script>
//<![CDATA[
function hitungWaktuBaca() {
    const teks = document.querySelector('.post-body').innerText;
    const kataPerMenit = 200; // Kecepatan rata-rata baca
    const jumlahKata = teks.trim().split(/\s+/).length;
    const waktu = Math.ceil(jumlahKata / kataPerMenit);
    document.getElementById('displayWaktu').innerText = " " + waktu + " menit membaca";
}
document.addEventListener("DOMContentLoaded", hitungWaktuBaca);
</script>
<script type='text/javascript'>
//<![CDATA[
// Matikan Klik Kanan dan Tahan Layar di HP
document.addEventListener('contextmenu', event => event.preventDefault());
document.onkeydown = function(e) {
  if (e.ctrlKey && (e.keyCode === 67 || e.keyCode === 86 || e.keyCode === 85 || e.keyCode === 83)) {
    return false;
  }
};
//]]>
</script>
 
    <script type='text/javascript'>
//<![CDATA[
(function() {
  function gasDropcap() {
    var bdy = document.querySelector('.post-body');
    if (!bdy) return;

    // Cari semua teks
    var targets = bdy.querySelectorAll('p, td, div');
    
    for (var i = 0; i < targets.length; i++) {
      var el = targets[i];
      var txt = el.textContent.trim();

      // --- BAGIAN PENTING ---
      // Angka dinaikkan jadi 100 supaya Caption gambar (yg pendek) tidak ikut besar
      // Kita HAPUS pengecekan '.tr-caption-container' supaya teks kamu terbaca!
      if (txt.length < 100) continue;

      var html = el.innerHTML.trim();
      if (html.indexOf('auto-dropcap') !== -1) break;

      var match = html.match(/^([a-zA-Z])/);
      if (!match) continue;

      var first = match[1];
      var rest = html.replace(first, '');

      el.innerHTML = '<span class="auto-dropcap">' + first + '</span>' + rest;
      break; 
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', gasDropcap);
  } else {
    gasDropcap();
  }
})();
//]]>
</script>
    
    

<script>
// <![CDATA[
function toggleBab() {
  var x = document.getElementById('daftar-bab');
  if (x) {
    x.style.display = (x.style.display === 'none' || x.style.display === '') ? 'block' : 'none';
  }
}

document.addEventListener('DOMContentLoaded', function() {
  const chapters = document.querySelectorAll('.post-body h3');
  const container = document.getElementById('list-container');
  if (container && chapters.length > 0) {
    chapters.forEach((cap, index) => {
      const id = 'bab-' + (index + 1);
      cap.id = id;
      const link = document.createElement('a');
      link.href = '#' + id;
      link.innerText = cap.innerText;
      link.setAttribute('style', 'text-decoration: none; color: #333; font-size: 11px; border-bottom: 1px solid #eee; padding-bottom: 4px; display: block; text-align: left;');
      link.onclick = function() { document.getElementById('daftar-bab').style.display = 'none'; };
      container.appendChild(link);
    });
  }
});
// ]]>
</script>

 
    
    </body>
</html>
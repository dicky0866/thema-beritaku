<script>
// A. Cek Status Terakhir saat Loading
if (localStorage.getItem('theme') === 'dark') {
    aktifkanDark();
}

function prosesToggle() {
    if (document.body.classList.contains('dark-mode')) {
        matikanDark();
    } else {
        aktifkanDark();
    }
}

function aktifkanDark() {
    document.body.classList.add('dark-mode');
    var wadah = document.getElementById('ikonMode');
    // Ganti ke Ikon Matahari (Putih)
    wadah.innerHTML = '<svg width="21" height="21" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>';
    
    // Jalankan Animasi
    wadah.classList.add('putar-ikon');
    setTimeout(() => wadah.classList.remove('putar-ikon'), 600);
    
    localStorage.setItem('theme', 'dark');
}

function matikanDark() {
    document.body.classList.remove('dark-mode');
    var wadah = document.getElementById('ikonMode');
    // Ganti ke Ikon Bulan (Putih)
    wadah.innerHTML = '<svg width="21" height="21" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>';
    
    // Jalankan Animasi
    wadah.classList.add('putar-ikon');
    setTimeout(() => wadah.classList.remove('putar-ikon'), 600);
    
    localStorage.setItem('theme', 'light');
}

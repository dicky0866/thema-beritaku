<script>
  if (window.location.href.toLowerCase().indexOf("novel") > -1) {
    // 1. Munculkan Rak Buku (Wajib ada)
    var rak = document.getElementById("rak-khusus-novel");
    if (rak) {
      rak.setAttribute('style', 'display:block !important');
    }
    
    // 2. Sapu bersih semua yang biasanya jadi tempat tulisan postingan
    var elemenTeks = document.querySelectorAll('.blog-posts, .post-outer, .post, #Blog1, .main-inner, .status-msg-wrap');
    elemenTeks.forEach(function(el) {
       el.setAttribute('style', 'display:none !important');
    });

    // 3. Tambahkan CSS tambahan lewat script agar lebih kuat
    var style = document.createElement('style');
    style.innerHTML = '.blog-posts, .post-outer { display: none !important; }';
    document.head.appendChild(style);
  }



